---
import { urlFor } from '../../sanity/imageBuilder.js';
const { articles } = Astro.props;
const articlesSliced = articles.slice(1);
---

<section class="mb-20">
  <div
    class="grid grid-cols-2 lg:grid-cols-3 gap-5 sm:gap-10 lg:gap-20 px-5 sm:px-10 lg:px-20 max-w-[800px] lg:max-w-[1400px] mx-auto"
  >
    {
      articlesSliced.map((article: any) => {
        return (
          <a href={`/blog/${article.slug.current}`}>
            <article class="flex flex-col border-2 border-grey-200 rounded-[10px] sm:rounded-[20px] hover:shadow-lg hover:bg-blue-100 transition-all">
              <div class="">
                <img
                  class="rounded-t-[10px] sm:rounded-t-[20px] aspect-[4/2.8] "
                  src={urlFor(article.featuredImage.asset).format('webp').url()}
                  alt={article.featuredImage.alt}
                />
              </div>
              <div class="">
                <h2 class=" text-blue-700 text-sm sm:text-lg lg:text-2xl font-heading font-bold p-2 sm:p-5">
                  {article.title}
                </h2>
              </div>
            </article>
          </a>
        );
      })
    }
  </div>
</section>
