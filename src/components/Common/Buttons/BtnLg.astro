---
export interface Props {
  text: string;
  href: string;
}

const { text, href } = Astro.props;
---

<a
  href={href}
  class="bg-blue-400 hover:bg-blue-600 text-center text-white text-xl sm:text-2xl font-body py-3 sm:py-4 px-4 sm:px-8 inline-block font-bold rounded-md hover:shadow-none shadow-lg transition-all"
  >{text}</a
>
