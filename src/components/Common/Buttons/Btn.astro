---
export interface Props {
  text: string;
  href: string;
}

const { text, href } = Astro.props;
---

<a
  href={href}
  class="bg-blue-400 hover:bg-blue-600 hover:shadow-none text-white text-lg font-body py-2 px-4 font-bold rounded-md shadow-lg inline-block max-w-[min-content] whitespace-nowrap transition-all"
  >{text}</a
>
