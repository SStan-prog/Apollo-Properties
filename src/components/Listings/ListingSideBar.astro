---
import type ListingType from 'interfaces';

const { currentListing, allListings } = Astro.props;

const activeListings = allListings.filter((sideBarListing: { hideListing: any; }) => {
    if (!sideBarListing.hideListing) return sideBarListing;
  });

  const currentSlug = currentListing.slug.current;

  const sideBarListings = activeListings
    .filter((sideBarListing: { slug: { current: any; }; }) => {
      if (sideBarListing.slug.current !== currentSlug) return sideBarListing;
    })
    .slice(0, 3);
---

<section class="w-96">
  <div class="flex flex-col items-center">
    <h2 class="text-blue-700 text-2xl font-bold mb-4">
      Other apartments you may like
    </h2>

    <div class=" flex flex-col items-center">
      {sideBarListings.map((listing: ListingType) => {
        return (
          <a
            href={`/listings/${listing.slug?.current}`}
            class="text-blue-400 text-l sm:text-xs font-body inline-block font-bold rounded-md"
          >
            <div class="flex flex-col py-8 px-8 sm:p-4 rounded-lg w-auto duration-500 hover:shadow-lg hover:bg-opacity-80 hover:bg-white">
              <div class="flex">
                <div class="flex justify-center items-center w-full lg:w-1/2 pr-8">
                  <p>image here</p>
                </div>
                <div class="flex flex-col lg:w-full h-full">
                  <h5 class="text-blue-600 font-bold sm:text-xl mb-1">
                    {listing.name}
                  </h5>
                  <p class="text-grey-600 sm:text-l mb-1">
                    {listing.address}
                  </p>
                  <p class="text-blue-700 sm:text-l mb-1">
                    <span class="sm:text-xl font-bold">
                      Â¥{listing.price}
                    </span>{' '}
                    <span class="whitespace-nowrap">per month</span>
                  </p>
                </div>
              </div>
            </div>
          </a>
        );
      })}

      <div class="border-t border-gray-300 my-2"></div>
      <div>
        <a
          href={'/listings'}
          class=" text-blue-400 text-l sm:text-m font-body font-bold"
        >
          View all listings
        </a>
      </div>
    </div>
  </div>
</section>